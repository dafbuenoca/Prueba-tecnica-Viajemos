{% extends 'base.html.twig' %}
{% block title %}Editoriales{% endblock %}
{% block body %}
    <h1 align="center">Editoriales</h1>
    <br>
        <button type="button" class="btn btn-outline-success" ><a class="nav-link" href="{{ path('editorial_new') }}">Nueva Editorial <span class="sr-only">(current)</span></a></button>
    <br>
    {% set count = 0 %}
    {% for editorial in editoriales %}
        {% if count % 2 == 0 %}
            <div class="row mb-2">
        {% endif %}
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">{{ editorial.nombre }}</strong>
                    <h3 class="mb-0">
                        <a class="text-dark" href="https://getbootstrap.com/docs/4.2/examples/blog/#">{{ editorial.sede }}</a>
                    </h3>
                </div>
            </div>
        </div>
        {% if count % 2 == 1 %}
            </div>
        {% endif %}  
        {% set count = count + 1 %}
        
    {% endfor %}

    
      
{% endblock %}